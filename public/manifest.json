{
  "manifest_version": 3,
  "name": "ChatGPT PopUp",
  "version": "0.1.0",
  "description": "Access ChatGPT as a popup on anypages. Save your chat history and seamlessly continue your conversations.",
  "icons": {
    "16": "icons/plane.png",
    "32": "icons/plane.png",
    "48": "icons/plane.png",
    "128": "icons/plane.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Paperchat",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage", "tabs"
  ],
  "host_permissions": [
    "https://*.openai.com/*", "https://chat.duti.tech/api/*"
  ]
}